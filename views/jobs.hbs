<!-- Need to use NVM 10.18.0-->
<!Doctype>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> Falcon Construction Database Page </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap 5.1.3 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- NEEDED FOR NAV BAR -->
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
</head>

<body>
    <!--Navigation bar-->
    <div id="nav_bar"></div>
    <script>
        $(function () {
            $("#nav_bar").load("nav_bar.html");
        });
    </script>
    <!--End Navigation bar-->

    <!-- FORM -->
    <div class="container-fluid" style="margin-top:50px; margin-bottom: 50px;">
        <div class="card">
            <div class="card-body">
                <h4>Add a New Job</h4>
                <form id="add-new-job">
                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label for="customer_ID_Select"></label>
                            <select class="form-control" name="customer_ID_Select" id="customer_ID_Select" required>
                                <option selected addisabled>Select Customer ID</option>
                                {{#each customers}}
                                <option>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="customer_name"></label>
                            <input class="form-control" type="text" id="customer_name" name="customer_name"
                                placeholder="Selected customer name will appear here..." disabled>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="category_ID_Select"></label>
                            <select class="form-control" name="category_ID_Select" id="category_ID_Select" required>
                                <option selected disabled>Select Category ID</option>
                                {{#each categories}}
                                <option>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="category_name"></label>
                            <input class="form-control" type="text" id="category_name" name="category_name"
                                placeholder="Selected category name will appear here..." disabled>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="job_start_date">Job start date<sup>*</sup></label>
                            <input type="date" class="form-control" id="job_start_date" name="job_start_date" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="job_end_date">Job end date (optional)</label>
                            <input type="date" class="form-control" id="job_end_date" name="job_end_date">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="job_status">Job status<sup>*</sup></label>
                            <select class="form-control" id="job_status" name="job_status" required>
                                <option selected disabled>Select a job status</option>
                                {{#each jobStatus}}
                                <option>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="job_code">Job code<sup>*</sup></label>
                            <input type="text" class="form-control" id="job_code" name="job_code" required>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="job_description">Job Description<sup>*</sup></label>
                            <input type="text" class="form-control" id="job_description" name="job_description"
                                required>
                        </div>
                    </div>
                    <div class="form-row text-center justify-content-center">
                        <button type="submit" class="btn btn-secondary" form="add-new-job" formmethod="post"
                            formaction="/add-job">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END FORM -->

    <!-- Editable JOBS table -->
    <div class="container-fluid">
        <div class="card text-center">
            <div class="card-header font-weight-bold text-uppercase py-4" style="font-size: 26px">Jobs Table</div>
            <div class="card-body">
                <table class="table table-bordered table-responsive-md table-striped text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Job ID</th>
                            <th class="text-center">Customer ID</th>
                            <th class="text-center">Category ID</th>
                            <th class="text-center">Job Code</th>
                            <th class="text-center">Start Date</th>
                            <th class="text-center">End Date</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td class="pt-3-half">{{this.job_id}}</td>
                            <td class="pt-3-half">{{this.fk_customer_id}}</td>
                            <td class="pt-3-half">{{this.fk_category_id}}</td>
                            <td class="pt-3-half">{{this.job_code}}</td>
                            <td class="pt-3-half">{{this.job_start_date}}</td>
                            <td class="pt-3-half">{{this.job_end_date}}</td>
                            <td class="pt-3-half">{{this.job_description}}</td>
                            <td class="pt-3-half">{{this.job_status}}</td>

                            <td>
                                <button type="button" class="btn btn-dark btn-sm my-0"> Update</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Editable JOBS table -->

    <!-- FOOTER -->
    <div id="footer"></div>
    <script>
        $(function () {
            $("#footer").load("footer.html");
        });

        $(document).ready(function () {
            $("a[href='" + window.location.href + "']").addClass("active");
        });
    </script>
    <!-- END FOOTER -->

</body>

</html>