<!-- Need to use NVM 10.18.0-->
<!Doctype>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> Falcon Construction Database Page </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap 5.1.3 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- NEEDED FOR NAV BAR -->
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
</head>

<body>
    <!--Navigation bar-->
    <div id="nav_bar"></div>
    <script>
        $(function () {
            $("#nav_bar").load("nav_bar.html");
        });
    </script>
    <!--End Navigation bar-->

    <!-- Editable table -->
    <div class="container-fluid">
        <div class="card text-center">
            <h3 class="card-header font-weight-bold text-uppercase py-4" style="font-size: 26px">
                Search for Employees Working on Jobs
            </h3>
            <div class="card-body row justify-content-md-center">
                <div class="col-md-5 p-3 border">
                    <form class="form-horizontal">
                        <h5> Search for Job </h5>
                        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Job ID</label>
                        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                            <option selected disabled>Choose One</option>
                            {{#each job_id}}
                            <option>{{this}}</option>
                            {{/each}}
                        </select>

                        <div class="text-center">
                            <button type="button" class="btn btn-secondary" name="submit_new_customer">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END FORM -->


    <!-- Editable CUSTOMER table -->
    <div class="container-fluid">
        <div class="card text-center">
            <div class="card-header font-weight-bold text-uppercase py-4" style="font-size: 26px">Job_Employees Table
            </div>
            <div class="card-body">
                <table class="table table-bordered table-responsive-md table-striped text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Job_Employee ID</th>
                            <th class="text-center">Job ID</th>
                            <th class="text-center">Job Description</th>
                            <th class="text-center">Employee ID</th>
                            <th class="text-center">Employee Name</th>
                            <th class="text-center">Employee Title</th>
                            <th class="text-center">Category ID</th>
                            <th class="text-center">Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td class="pt-3-half">{{this.job_employee_id}}</td>
                            <td class="pt-3-half">{{this.job_id}}</td>
                            <td class="pt-3-half">{{this.job_description}}</td>
                            <td class="pt-3-half">{{this.employee_id}}</td>
                            <td class="pt-3-half">{{this.name}}</td>
                            <td class="pt-3-half">{{this.title}}</td>
                            <td class="pt-3-half">{{this.category_id}}</td>
                            <td class="pt-3-half">{{this.category_name}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  
    <!-- Editable table -->

    <!-- Button Row -->
    <div class="container text-center" style="margin-top:25px;">
        <a href="/job_employees" class="btn btn-primary"> Back to Job_Employees Table</a>
    </div>
    <!-- Button Row -->

    <!-- FOOTER -->
    <div id="footer"></div>
    <script>
        $(function () {
            $("#footer").load("footer.html");
        });

        $(document).ready(function () {
            $("a[href='" + window.location.href + "']").addClass("active");
        });
    </script>
    <!-- END FOOTER -->

</body>

</html>