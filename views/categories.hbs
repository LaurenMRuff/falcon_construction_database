<!-- Need to use NVM 10.18.0-->
<!Doctype>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> Falcon Construction Database Page </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap 5.1.3 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- NEEDED FOR NAV BAR -->
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
</head>

<body>
    <!--Navigation bar-->
    <div id="nav_bar"></div>
    <script>
        $(function () {
            $("#nav_bar").load("nav_bar.html");
        });
    </script>
    <!--End Navigation bar-->

    <!-- FORM -->
    <div class="container-fluid" style="margin-top:50px; margin-bottom: 50px;">
        <div class="card">
            <div class="card-body">
                <h4>Add a New Category</h4>
                <form id="add-new-category">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="category_name">Category Name<sup>*</sup></label>
                            <input type="text" class="form-control" id="category_name" name="category_name" required>
                        </div>
                    </div>
                    <div class="form-row text-center justify-content-center">
                        <button type="submit" class="btn btn-secondary" form="add-new-category" formmethod="post"
                            formaction="/add-category">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End FORM -->

    <!-- Editable CATEGORY table -->
    <div class="container-fluid">
        <div class="card text-center">
            <div class="card-header font-weight-bold text-uppercase py-4" style="font-size: 26px">Categories Table</div>
            <div class="card-body">
                <table class="table table-bordered table-responsive-md table-striped text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Category ID</th>
                            <th class="text-center">Category Name</th>
                            <th class="text-center">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each all_category_data}}
                        <tr>
                            <td class="pt-3-half">{{this.category_id}}</td>
                            <td class="pt-3-half">{{this.category_name}}</td>
                            <td>
                                <button type="button" class="btn btn-dark btn-sm my-0"> Update</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- End Editable CATEGORY table -->

    <!-- FOOTER -->
    <div id="footer"></div>
    <script>
        $(function () {
            $("#footer").load("footer.html");
        });

        $(document).ready(function () {
            $("a[href='" + window.location.href + "']").addClass("active");
        });
    </script>
    <!-- END FOOTER -->

</body>

</html>