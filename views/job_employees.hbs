<!-- Need to use NVM 10.18.0-->
<!Doctype>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> Falcon Construction Database Page </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap 5.1.3 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- NEEDED FOR NAV BAR -->
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script src="./javascript/delete_job_employee.js"></script>
</head>

<body>

    <!--Navigation bar-->
    <div id="nav_bar"></div>
    <script>
        $(function () {
            $("#nav_bar").load("nav_bar.html");
        });

    </script>
    <!--End Navigation bar-->

    <!-- ADD JOB_EMPLOYEES FORM -->
    <div class="container-fluid" style="margin-top:50px; margin-bottom: 50px;">
        <div class="card">
            <div class="card-body">
                <h4>Add a new Job_Employee Relationship</h4>
                <form id="add-job-employee" name="add_job_employee">
                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label for="employee_name"></label>
                        <select class="form-control" id="employee_name" name="employee_name" onchange="document.add_job_employee.employee_id.value=this.options[this.selectedIndex].value" required>
                            <option selected>Select an existing employee</option>
                            {{#each employee_data}}
                                <option value="{{this.employee_id}}">{{this.employee_name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="employee_id"></label>
                        <input class="form-control" id="employee_id" name="employee_id" type="text"
                            value="employee_id will be read only" readonly>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="job_info"></label>
                        <select class="form-control" id="job_info" name="job_info" onchange="document.add_job_employee.job_id.value=this.options[this.selectedIndex].value" required>
                            <option selected>Select an existing job</option>
                            {{#each job_data}}
                                <option value="{{this.job_id}}">{{this.job_info}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="job_id"></label>
                        <input class="form-control" id="job_id" name="job_id" type="text"
                               value="job_id will be read-only" readonly>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-secondary" form="add-job-employee" formmethod="post"
                            formaction="/add-job-employee">Submit</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END ADD JOB_EMPLOYEES FORM -->

    <!-- JOB_EMPLOYEES table -->
    <div class="container-fluid">
        <div class="card text-center">
            <div class="card-header font-weight-bold text-uppercase py-4" style="font-size: 26px">Job_Employees Table
            </div>
            <div class="card-body">
                <table class="table table-bordered table-responsive-md table-striped text-center" id="job-employee-table">
                    <thead>
                        <tr>
                            <th class="text-center">Job_Employee ID</th>
                            <th class="text-center">Employee ID</th>
                            <th class="text-center">Job ID</th>
                            <th class="text-center">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each all_job_employee_data}}
                            <tr data-value={{this.job_employee_id}}>
                                <td class="pt-3-half">{{this.job_employee_id}}</td>
                                <td class="pt-3-half">{{this.fk_employee_id}}</td>
                                <td class="pt-3-half">{{this.fk_job_id}}</td>
                                <td><button onclick="deleteJobEmployee({{this.job_employee_id}})">Delete</button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- END JOB_EMPLOYEES table -->

    <!-- Button Row -->
    <div class="container text-center" style="margin-top:25px;">
        <a href="/job_employees_search" class="btn btn-primary"> Search for Job_Employees Relationship</a>
    </div>
    <!-- Button Row -->

    <!-- FOOTER -->
    <div id="footer"></div>
    <script>
        $(function () {
            $("#footer").load("footer.html");
        });

        $(document).ready(function () {
            $("a[href='" + window.location.href + "']").addClass("active");
        });
    </script>
    <!-- END FOOTER -->

</body>

</html>